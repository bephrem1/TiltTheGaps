<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffe2e0e2" />
            <gradient android:angle="-90" android:startColor="#ffbabebc" android:endColor="#ffd8dede"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff747975" />
            <solid android:color="#ff848583"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a8fffffb" />
            <gradient android:angle="-90" android:startColor="#ffe0dbe3" android:endColor="#ffffffff" />
        </shape>
    </item>
</selector>
